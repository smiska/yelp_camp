<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>YelpCamp táborhelyek</h1>
            <p>Böngésszen vagy ossza meg saját kedvelt helyeit! Legyen aktív tagunk!</p>
            <a class="btn btn-primary btn large" href="/campgrounds/new">Új táborhely hozzáadása</a>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Legkedveltebb táborhelyek</h3>
        </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap:wrap">
        <% campgrounds.forEach(function(campground){ %>
         <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=campground.img%>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                </div>
         </div>
        <% }); %>
    </div>
    <div class="row">
            <a class="btn btn-primary btn large" href="/">Menjünk vissza a fő oldalra!</a>
    </div>
</div>      

<% include partials/footer %>